page {
  width: 100%;
  height: 100%;
  background: gainsboro;
}

.container {
  width: 100%;
  height: 400rpx;
}
.background_arc {
  position: relative;
  height: 70rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  background-color: #EE5C42;
}
.background_arc:after {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -100px;
  z-index: -1;
  content: ' ';
  height: 130px;
  width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #EE5C42;
}
.user_info_container {
  float: left;
  height: 100%;
  width: 100%;
}
.user_info_container2 {
  min-width: 150rpx;
  max-width: 300rpx;
  height: 300rpx;
  margin-top: 125rpx;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}
.user_photo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}
.user_name {
  font-size: 33rpx;
  margin-top: 20rpx;
}

.item_container {
  height: 130rpx;
  width: 92%;
  background: white;
  margin: 20rpx 4% 30rpx 4%;
  border-radius:20rpx;
  display: flex;
  flex-direction: row;
}
.item_titile {
  margin: auto 0 auto 30rpx;
}
.space {
  flex:1;
}
.item_button {
  float: right;
  height: 85rpx;
  margin: auto 20rpx auto 0;
  font-size: 37rpx;
  text-align: center;
  vertical-align: middle ;
  padding-top: 0rpx;
  padding-bottom: 0rpx;
}
.item_button_white {
  color: grey;
  background: white;
}
.item_button_orange {
  color: white;
  background: #EEB422;
}
.item_button_blue {
  color: white;
  background: #436EEE;
}
.item_lookup {
  color: grey;
  margin: auto 30rpx auto 0;
}