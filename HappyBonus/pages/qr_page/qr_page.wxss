/* pages/qr_page/qr_page.wxss */
Page{
  width: 100%;
  height: 100%;
  background:#ffffff;
  font-family:'PingFang SC Medium',  "微软雅黑";
 
}
.container{
  width:100%;
  text-align:center;
}
.pic{
  position:fixed;
  width:95%;
  height:60%;
  margin:0 2.5% 0 2.5%;
  z-index: -1;
}
.picture{
  width:100%;
  height:100%;
  border-radius:20rpx 20rpx 0 0;
  
}
.picc{
  position:fixed;
  width:95%;
  height:55%;
  z-index:0;
  left:2.5%;
  bottom:1.5%;
  overflow:hidden;
  
}
.xiangkuang {
  z-index:0;
  width:150%;
  margin-left:-25%;
  height:30%;
}
.actcute{
	margin-top:2%;
	font-size:medium;
	color:#f51e3c;
}
.text{
  position:fixed;
  top:calc(50% + 350rpx);
	font-size:36rpx;
	font-weight:blod;
	color:#fde3aa;
  width:100%;
  left:3%;
  text-align:center;
}
.snsQrcode{
  position:fixed;
  z-index:1;
  top:50%;
  left:calc(50% - 160rpx);
  width:320rpx;
  height:320rpx;
  border-radius:100%;
  background: #f24d4d;
}
.sharebox{
  display: none;
  position:absolute;
  left:10%;
  top:50%;
	width:80%;
	height:30%;
	background:#ffffff;
	border-radius:4%;
  z-index:3;
}
.share{
	margin:8% 5% 0% 5%;
	height:25%;
	line-height:82rpx;
	
}
.share1{
	margin:8% 5% 0% 5%;
	height:25%;
	background:#00b720;
	border-radius:3%;
	color:#ffffff;
	font-size:medium;
	line-height:82rpx;
}
