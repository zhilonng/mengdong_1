  left:102rpx;
  top:30rpx;
}
.card2_user_container {
  margin:0 auto 0 auto;
  width: 100%;
  height:80rpx;
  padding:30rpx 0 30rpx 0;
  float:left;
  border-bottom:1rpx solid #e6e6e6;
}
.card2_user_avatar {
  height:80rpx;
  width:80rpx;
  border-radius:80rpx;
  border:1rpx solid #dddddd;
  float:left;
  margin:auto 20rpx;
}
.card2_user_content {
  float:left;
  margin: -25rpx 0 auto 8rpx;
  color: #ffffff;
  font-size: 36rpx;
  background:#f24d4d;
  border-radius:14rpx;
  line-height:80rpx;
  position: relative;
  padding:0 20rpx;
  font-weight:800;
}
.card_iner_card1 {
  position:absolute;
  top:30%;
  left:7%;
  width: 86%;
  height: 40%;
  z-index: 1;
}
.card_iner_card1_2 {
  border-radius: 35rpx;
  display: flex;
  flex-direction:column;
 	align-items:center;
  background: white;
  padding-bottom: 20rpx;
  z-index:2;
}
.money_container {
  display: flex;
  margin-top: 40rpx;
  text-align:center;
}
.input_digits {
  font-weight:blod;
  font-size:50rpx;
}
.btn_send {
  width: 86%; 
  border-radius: 25rpx;
  margin-top: 20rpx;
