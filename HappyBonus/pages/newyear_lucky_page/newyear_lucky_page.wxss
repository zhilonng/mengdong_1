page {
  background: #ffffff;
  height: 100%;
  width: 100%;
}
.titile_container {
  position: fixed;
  top:0;
  width:100%;
  height:100rpx;
  z-index: 0;
}
.item_titile_container {
  margin:0 auto 0 auto;
  width:100rpx;
  height:100rpx;
  background: #f24d4d;
  border-radius: 0 0 50rpx 50rpx;
  z-index: 0;
}
.user_avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 80rpx;
  background: #eeeeee;
  margin: 10rpx;
}
.card1_container {
  position: fixed;
  top:0;
  width: 100%;
  height: 60%;
  z-index:-1;
}
.card1_photo {
  height: 100%;
  width: 100%;
  background: #dddddd;
  z-index: -1;
}
.card2_container {
  width: 100%;
  min-height:100%;
  border-radius: 30rpx 30rpx 0 0 ;
  border-top:1rpx solid #bbbbbb;
  background:#ffffff;
  margin-top: 92%;
  opacity:0.999;
  z-index: 1;
}
.triangle{
  width: 0px;
  height: 0px;
  border-width: 15rpx;
  border-style: solid ;
  border-color: transparent #f24d4d transparent transparent;
