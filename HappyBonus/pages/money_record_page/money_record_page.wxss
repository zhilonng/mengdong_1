Page{
  font-family:'PingFang SC Medium',  "微软雅黑";
}
.nav{
  height:80rpx;
  background: #f3f5fa;
}
.nav_box{
  overflow: hidden;
  width:600rpx;
  height:80rpx;
  margin:0 auto;
  line-height: 80rpx;
  color:grey;
  display:flex;
  justify-content: space-around;
}
.nav_titile {
  height: 76rpx;
  font-size: 35rpx;
  margin: auto 0 auto 0;
}
.details_titile_container{
  display: flex;
}
.details_tag{
  border: 2rpx solid grey;
  color: grey;
  border-radius: 25rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
  margin-right: 10rpx;
}
.item_details_titile {
  font-size: 38rpx;
}
