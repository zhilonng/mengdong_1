}

.item_photo {
  width: 90rpx;
  height: 90rpx;
  margin: auto 0 auto 25rpx;
}
.item_titile_2 {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #999;
}
.space {
  flex: 1;
}
.item_details {
  
  margin: auto 25rpx auto 0;
}
.item_money {
