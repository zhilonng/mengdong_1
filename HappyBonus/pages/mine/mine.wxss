page {
  background: #eeeeee;
  height: 100%;
  width: 100%;
}

.container {
  width: 100%;
  height: 400rpx;
}
.background_arc {
  position:fixed;
  width: 100%;
  height: 60rpx;
  text-align: center;
  color: #fff;
  background-color: #f24d4d;
  z-index: -1;
}
.background_arc:after {
  position: absolute;
  left: -25%;
  right: 0;
  bottom: -120rpx;
  z-index: -1;
  content: ' ';
  height: 500rpx;
  width: 150%;
  border-radius: 0 0 150% 150%;
  background-color: #f24d4d;
}
.user_info_container {
  float: left;
  height: 100%;
  width: 100%;
}
.user_info_container2 {
  min-width: 150rpx;
  max-width: 300rpx;
  height: 600rpx;
  margin: 80rpx auto 40rpx;
  text-align: center;
}
.user_photo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  border:1rpx solid #dddddd;
}
.user_name {
  font-size: 36rpx;
  margin: 15rpx auto 50rpx;
  font-weight:800;
}

