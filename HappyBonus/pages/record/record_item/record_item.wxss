
.item_container {
  width: 100%;
  height: 140rpx;
  background:#ffffff;
  border-bottom: 1px solid #eeeeee;
  display: flex;
}

.item_photo {
  width: 90rpx;
  height: 90rpx;
  margin: auto 0 auto 25rpx;
}
.item_titile_2 {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #999;
}
.space {
  flex: 1;
}
.item_details {
  float: right;
  margin: auto 25rpx auto 0;
}
.item_money {
  font-size: 35rpx;
}
.item_time {
  font-size: 25rpx;
  color: #999;
  margin-top:15rpx;
}
.details_tag_orange {
  background: #ff9900;
  color: #ffffff;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
  font-size: 28rpx;
}
.details_tag_red{
  background: #f24d4d;
  color: #ffffff;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
  font-size: 28rpx;
}